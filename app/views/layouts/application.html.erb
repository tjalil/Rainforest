<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class = "flash">
      <% if flash[:notice] %>
        <p id = "notice", style="color:green"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert] %>
        <p id = "alert", style="color:red"><%= flash[:alert] %></p>
      <% end %>
    </div>

    <% if current_page?(controller: "products", action: "index") == false %>
      <%= link_to "Back to Homepage", products_path %>
    <% end %>

    <div class = "userinfo", style= "float: right">
      <% if current_user  %>
        Signed in as <%= current_user.first_name %> <%= current_user.last_name %> | <%= link_to "Logout", session_path("current"), method: :delete %>
      <% else %>
        <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
      <% end %>
    </div>

    <%= yield %>



  </body>
</html>
