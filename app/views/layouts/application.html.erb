<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if flash[:notice] %>
      <p id = "notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p id = "alert"><%= flash[:alert] %></p>
    <% end %>

    <p class = "userinfo">
      <% if current_user  %>
        Signed in as <%= current_user.first_name %> <%= current_user.last_name %> | <%= link_to "Logout", session_path("current"), method: :delete %>
      <% else %>
        <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
      <% end %>
    </p>

    <%= yield %>



  </body>
</html>
