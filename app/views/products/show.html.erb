<%= link_to "Back to Homepage", products_path %>

<p><%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete Product", @product, confirm: "Are you sure you want to delete this picture?", method: :delete %></p>

<h3><%= @product[:name] %></h3>
<p>Description: <%= @product[:description] %></p>
<p>Price: $<%= @product.formatted_price %> </p>

<% if current_user %>
  <h4>Comments</h4>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
    </p>
    <p>
      <% if review.user != nil %>
      <em>by <%= review.user.first_name %> <%= review.user.last_name %></em>
      Added on: <%= review.created_at %>
      <% end  %>
    </p>

  <% end %>
<% end %>